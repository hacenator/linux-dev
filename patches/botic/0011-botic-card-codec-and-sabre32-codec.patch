+static void asoc_botic_card_shutdown(struct platform_device *pdev)
+{
+    if (gpio_card_power_switch >= 0) {
+        /* switch the card off first */
+        gpio_set_value(gpio_card_power_switch, 0);
+        /* sleep until card will be powered down safely */
+        mdelay(1000);
+    }
+}
